{% extends 'base.html.twig' %}

{% block title %}Sorties - Sortir.com{% endblock %}

{% block body %}
    <div class="container">

        {# ---- Carte d'information utilisateur ---- #}
        <div class="top-right-info">
            <aside class="user-info-card">
                <p><strong>Date du jour :</strong> {{ "now"|date("d/m/Y") }}</p>
                <p><strong>Participant :</strong>
                    {{ app.user and app.user.participant ? app.user.participant.pseudo : "Anonyme" }}
                </p>
            </aside>
        </div>

        <section class="filters">
            <h2 class="filters-title">Filtrer les sorties</h2>

            <div class="filters-grid3">
                <div class="filters-left">
                    <form id="filters-form" method="get" class="filters-left-form">
                        <label for="site">Site :</label>
                        <select name="site" id="site">
                            <option value="">Tous les sites</option>
                            {% for site in sites %}
                                <option value="{{ site.idSite }}" {{ filters.site == site.idSite ? 'selected' : '' }}>
                                    {{ site.nomSite }}
                                </option>
                            {% endfor %}
                        </select>

                        <label for="q">Le nom de la sortie contient :</label>
                        <input type="text" name="q" id="q" value="{{ filters.q }}">

                        <label>Entre</label>
                        <div class="date-row">
                            <input type="date" name="dateMin" value="{{ filters.dateMin|default('') }}">
                            <span class="date-sep">et</span>
                            <input type="date" name="dateMax" value="{{ filters.dateMax|default('') }}">
                        </div>
                    </form>
                </div>

                <div class="filters-middle">
                    <label class="chk"><input type="checkbox" form="filters-form" name="organisateur" {% if filters.organisateur %}checked{% endif %}> Sorties dont je suis l’organisateur/trice</label>
                    <label class="chk"><input type="checkbox" form="filters-form" name="inscrit" {% if filters.inscrit %}checked{% endif %}> Sorties auxquelles je suis inscrit/e</label>
                    <label class="chk"><input type="checkbox" form="filters-form" name="nonInscrit" {% if filters.nonInscrit %}checked{% endif %}> Sorties auxquelles je ne suis pas inscrit/e</label>
                    <label class="chk"><input type="checkbox" form="filters-form" name="passees" {% if filters.passees %}checked{% endif %}> Sorties passées</label>
                </div>

                <aside class="filters-right">
                    <button type="submit" class="btn search-btn" form="filters-form">Rechercher</button>
                </aside>
            </div>
        </section>

        <section class="list">
            <table>
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Date de la sortie</th>
                    <th>Clôture</th>
                    <th>Inscrits/Places</th>
                    <th>Inscrit ?</th>
                    <th>État</th>
                    <th>Organisateur</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for s in sorties %}
                    {% set isConnected    = app.user and app.user.participant %}
                    {% set me             = isConnected ? app.user.participant : null %}
                    {% set isOrganisateur = isConnected and me == s.organisateur %}
                    {% set isInscrit      = isConnected and (me in s.participants) %}
                    {% set isOuverte      = s.etat.libelle == 'Ouverte' %}
                    {% set beforeDeadline = (s.dateCloture|date('U')) >= ("now"|date('U')) %}
                    {% set hasRoom        = (s.participants|length) < s.nbInscriptionsMax %}
                    {% set beforeStart    = (s.dateDebut|date('U')) > ("now"|date('U')) %}

                    {% set rowClass = '' %}
                    {% if s.etat.libelle == 'Créée' %}
                        {% set rowClass = 'inactive-row' %}
                    {% endif %}

                    <tr class="{{ rowClass }}">
                        <td>{{ s.nom }}</td>
                        <td>{{ s.dateDebut|date('d/m/Y H:i') }}</td>
                        <td>{{ s.dateCloture|date('d/m/Y') }}</td>
                        <td>{{ s.participants|length }}/{{ s.nbInscriptionsMax }}</td>
                        <td>{% if isInscrit %}X{% endif %}</td>
                        <td>
                            {% if s.etat.libelle == 'Créée' %}
                                En création
                            {% else %}
                                {{ s.etat.libelle }}
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('app_participant_show', {idParticipant: s.organisateur.idParticipant}) }}">
                                {{ s.organisateur.prenom }} {{ s.organisateur.nom }}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('app_sortie_show', {idSortie: s.idSortie}) }}">Afficher</a>

                            {% if isConnected %}
                                {% if isInscrit %}
                                    <a href="{{ path('app_sortie_desister', {'idSortie': s.idSortie}) }}">Se désister</a>
                                {% elseif isOuverte and beforeDeadline and hasRoom %}
                                    <a href="{{ path('app_sortie_inscrire', {'idSortie': s.idSortie}) }}">S'inscrire</a>
                                {% endif %}
                            {% endif %}

                            {% if isOrganisateur and s.etat.libelle == 'Créée' %}
                                <a href="{{ path('app_sortie_ouvrir', {id: s.idSortie}) }}">Ouvrir</a>
                            {% endif %}

                            {% if isConnected and (isOrganisateur or is_granted('ROLE_ADMIN')) and beforeStart and s.etat.libelle != 'Annulée' %}
                                <a href="{{ path('app_sortie_annuler', {'idSortie': s.idSortie}) }}" style="color:#b00020; font-weight:600;">Annuler</a>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr><td colspan="8">Aucune sortie.</td></tr>
                {% endfor %}
                </tbody>
            </table>
        </section>

        <div class="actions actions-left">
            <a href="{{ path('app_sortie_new') }}" class="btn">Créer une sortie</a>
        </div>
    </div>
{% endblock %}
