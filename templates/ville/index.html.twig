{% extends 'base.html.twig' %}

{% block title %}Gérer les villes{% endblock %}

{% block body %}
    <div class="container">
        <h1>Gérer les villes</h1>

        {# --- Bloc filtre, comme sur la maquette --- #}
        <section class="filters">
            <h2 class="filters-title">Filtrer les villes</h2>
            <form method="get" action="{{ path('app_ville_index') }}">
                <label for="q">Le nom contient :</label>
                <input type="text" id="q" name="q" value="{{ q ?? '' }}" placeholder="ex : HER">
                <button type="submit">Rechercher</button>
            </form>
        </section>

        {# --- Tableau liste --- #}
        <table class="table">
            <thead>
            <tr>
                <th>Ville</th>
                <th>Code postal</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for ville in villes %}
                <tr>
                    <td>{{ ville.nomVille }}</td>
                    <td>{{ ville.codePostal }}</td>
                    <td>
                        <a href="{{ path('app_ville_edit', {'idVille': ville.idVille}) }}">Modifier</a> -
                        <form method="post"
                              action="{{ path('app_ville_delete', {'idVille': ville.idVille}) }}"
                              style="display:inline-block"
                              onsubmit="return confirm('Supprimer cette ville ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ville.idVille) }}">
                            <button class="btn">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucune ville trouvée</td>
                </tr>
            {% endfor %}

            {# Ligne d’ajout (maquette : lien "Ajouter") #}
            <tr>
                <td colspan="3">
                    <a href="{{ path('app_ville_new') }}">Ajouter</a>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
