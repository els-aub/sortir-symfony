{% extends 'base.html.twig' %}

{% block title %}Gérer les sites{% endblock %}

{% block body %}
    <div class="container">
        <h1>Gérer les sites</h1>

        {# --- Bloc filtre, comme sur la maquette --- #}
        <section class="filters">
            <h2 class="filters-title">Filtrer les sites</h2>
            <form method="get" action="{{ path('app_site_index') }}">
                <label for="q">Le nom contient :</label>
                <input type="text" id="q" name="q" value="{{ q ?? '' }}" placeholder="">
                <button type="submit">Rechercher</button>
            </form>
        </section>

        {# --- Tableau liste --- #}
        <table class="table">
            <thead>
            <tr>
                <th>Site</th> {# maquette : cette colonne doit s’appeler "Ville" mais c’est bien le nom du site ici #}
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for site in sites %}
                <tr>
                    <td>{{ site.nomSite }}</td>
                    <td>
                        <a href="{{ path('app_site_edit', {'idSite': site.idSite}) }}">Modifier</a> -
                        <form method="post"
                              action="{{ path('app_site_delete', {'idSite': site.idSite}) }}"
                              style="display:inline-block"
                              onsubmit="return confirm('Supprimer ce site ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ site.idSite) }}">
                            <button class="btn">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">Aucun site trouvé</td>
                </tr>
            {% endfor %}

            {# Ligne d’ajout (maquette : lien "Ajouter") #}
            <tr>
                <td colspan="2">
                    <a href="{{ path('app_site_new') }}">Ajouter</a>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
