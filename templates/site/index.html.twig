{% extends 'base.html.twig' %}

{% block title %}Site index{% endblock %}

{% block body %}
    <h1>Site index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>idSite</th>
                <th>NomSite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for site in sites %}
            <tr>
                <td>{{ site.idSite }}</td>
                <td>{{ site.nomSite }}</td>
                <td>
                    <a href="{{ path('app_site_show', {'idSite': site.idSite}) }}">show</a>
                    <a href="{{ path('app_site_edit', {'idSite': site.idSite}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_site_new') }}">Create new</a>
{% endblock %}
