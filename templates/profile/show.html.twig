{% extends 'base.html.twig' %}

{% block title %}Profil de {{ participant.pseudo }}{% endblock %}

{% block body %}
    <h1>{{ participant.pseudo }}</h1>

    <div style="display: flex; justify-content: center;">
        <div class="profile-box">
            <div class="profile-avatar">
                {{ participant.pseudo|slice(0,1)|upper }}
            </div>

            <div class="profile-infos">
                <div class="readonly-inline"><strong>Prénom :</strong> {{ participant.prenom }}</div>
                <div class="readonly-inline"><strong>Nom :</strong> {{ participant.nom }}</div>
                <div class="readonly-inline"><strong>Téléphone :</strong> {{ participant.telephone ?? '—' }}</div>
                <div class="readonly-inline"><strong>Email :</strong> {{ participant.mail }}</div>
                <div class="readonly-inline"><strong>Ville de rattachement :</strong> {{ participant.site.nomSite }}</div>
            </div>
        </div>
    </div>

    <div class="form-actions">
        <a href="{{ path('app_home') }}" class="btn">Retour</a>
    </div>
{% endblock %}
